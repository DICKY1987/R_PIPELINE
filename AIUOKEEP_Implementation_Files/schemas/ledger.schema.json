{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RunLedgerEntry",
  "type": "object",
  "required": ["timestamp", "result", "checks"],
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "result": {
      "type": "string",
      "enum": ["pass", "fail"]
    },
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "status"],
        "properties": {
          "name": { "type": "string" },
          "status": { "type": "string" }
        }
      }
    }
  }
}
